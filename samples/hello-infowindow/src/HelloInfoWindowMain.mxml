<s:ViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
                            xmlns:s="library://ns.adobe.com/flex/spark"
                            applicationDPI="160"
                            firstView="views.HelloInfoWindowMainHomeView">

    <fx:Style>
        @namespace esri "http://www.esri.com/2008/ags";

        esri|Navigation
        {
            skinClass: ClassReference("skins.SimpleNavigationSkin");
        }
        
        esri|ContentNavigator
        {
            headerBackgroundAlpha: 0;
            headerColor: #000000;
        }
        esri|InfoWindow
        {
            border-thickness: 1;
            borderColor: #666666;
            background-color: #F9F9F9;
            backgroundAlpha: 1;
            font-size: 16;
            upper-left-radius: 5;
            upper-right-radius: 0;
            info-placement: right;
            info-offset-y: 20;
            info-offset-x: 20;
            shadowAlpha: 0.6;
            shadowDistance: 10;
        }
        
        esri|PopUpRenderer
        {
            skinClass: ClassReference("skins.PopUpRendererSkin");
        }

    </fx:Style>

</s:ViewNavigatorApplication>
